!------------------------------------------------------------------------------!
! Cor da fonte e fundo                                                         !
!------------------------------------------------------------------------------!
URxvt.foreground:      #00FF00
URxvt.background: [90]#000000
URxvt.depth: 32

!------------------------------------------------------------------------------!
! Fonte                                                                        !
!------------------------------------------------------------------------------!
! URxvt.font: xft:inconsolata:pixelsize=14:antialias=true:hinting=true
! URxvt.boldFont: xft:inconsolata:pixelsize=14:antialias=true:hinting=true
!-------------------------------------------------------------------------------
! URxvt.font: xft:monospace:pixelsize=13:antialias=true:hinting=true
! URxvt.boldFont: xft:monospace:pixelsize=13:antialias=true:hinting=true
!-------------------------------------------------------------------------------
 URxvt.font: xft:Hack-Regular:pixelsize=13:antialias=true:hinting=true
 URxvt.boldFont: xft:Hack-Regular:bold:pixelsize=13:antialias=true:hinting=true
!-------------------------------------------------------------------------------
! URxvt.font: xft:terminus:pixelsize=14:antialias=true:hinting=false
! URxvt.boldFont: xft:terminus:pixelsize=14:antialias=true:hinting=false
!-------------------------------------------------------------------------------
! URxvt.font: xft:Lucida Console:encoding=utf-8:size=11:antialias=true
! URxvt.boldFont: xft:Lucida Console:encoding=utf-8:size=11:antialias=true
!-------------------------------------------------------------------------------

!------------------------------------------------------------------------------!
! Espaçamento entre linhas                                                     !
!------------------------------------------------------------------------------!
URxvt.lineSpace: 1.2

!------------------------------------------------------------------------------!
! Tamanho da janela                                                            !
!------------------------------------------------------------------------------!
URxvt.geometry: 90x18

!------------------------------------------------------------------------------!
! Barra de rolagem                                                             !
!------------------------------------------------------------------------------!
URxvt.scrollBar: false

!------------------------------------------------------------------------------!
! Margem interna                                                               !
!------------------------------------------------------------------------------!
URxvt.internalBorder:  10

!------------------------------------------------------------------------------!
! Configureções do cursor
!------------------------------------------------------------------------------!
URxvt.cursorBlink: true
URxvt.cursorUnderline: false

!------------------------------------------------------------------------------!
! Configurar copiar, colar e outras ações.
!------------------------------------------------------------------------------!
!! Copy Paste & Other Extensions
URxvt.perl-ext-common: default,clipboard,url-select,keyboard-select
URxvt.copyCommand: xclip -i -selection clipboard
URxvt.pasteCommand: xclip -o -selection clipboard
URxvt.keysym.M-c: perl:clipboard:copy
URxvt.keysym.M-v: perl:clipboard:paste
URxvt.keysym.M-C-v: perl:clipboard:paste_escaped
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.M-s: perl:keyboard-select:search
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.urlLauncher: firefox
URxvt.underlineURLs: true
URxvt.urlButton: 1



