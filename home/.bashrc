# ====================================================================
# Variáveis globais
# ====================================================================

# Evita erros com o comando GPG.
export GPG_TTY=$(tty)

# ====================================================================
# Constantes
# ====================================================================

# muda cor da fonte.
RED='\[\e[31;1m\]'
GREEN='\[\e[32;1m\]'
BLUE='\[\e[34;1m\]'

# muda cor do fundo.
RED2='\[\e[31;7;1m\]'
GREEN2='\[\e[32;7;1m\]'
BLUE2='\[\e[34;7;1m\]'

END='\[\e[m\]'

# ====================================================================
# Variáveis
# ====================================================================

# Verificando usuário.
user=$(whoami)

# ====================================================================
# Aliases
# ====================================================================
alias ls='ls -p --color=auto'
alias tree='tree -aC'
alias cls='clear'

# ====================================================================
# Temas para variável PS1
# ====================================================================

TEMA_1A="\n${RED}┌─(\u@\h)─[${END}${BLUE}\w${END}${RED}]${END}\n${RED}└──#${END} "
TEMA_1B="\n${GREEN}┌─(\u@\h)─[${END}${BLUE}\w${END}${GREEN}]${END}\n${GREEN}└──\$${END} "

TEMA_2A="\n${RED}┌─${END}${RED2} \u ${END}${BLUE2} \w ${END}\n${RED}└──#${END} "
TEMA_2B="\n${GREEN}┌─${END}${GREEN2} \u ${END}${BLUE2} \w ${END}\n${GREEN}└──\$${END} "

# ====================================================================
# Definindo a variável de ambiente PS1
# ====================================================================

if [[ "${user}" == "root" ]];then
    export PS1="${TEMA_2A}"
else
    export PS1="${TEMA_2B}"
fi
